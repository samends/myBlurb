{
  "compilerOptions": {
     "target": "es6",
     "module": "commonjs",
     "outDir": "dist",
     "sourceMap": false,
     "declaration": true,
     "moduleResolution": "node",
     "experimentalDecorators": true,
     "emitDecoratorMetadata": true,
     "typeRoots": ["node_modules/@types"],
     "lib": [
       "es2017.object",
       "es2015",
       "es2017",
       "esnext.asynciterable"
     ]
  },
  "include": [
     "src/**/*.ts"
  ],
  "exclude": [
     "node_modules"
  ],
}